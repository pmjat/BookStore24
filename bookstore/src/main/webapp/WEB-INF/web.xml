<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
  <display-name>BookStore.v24</display-name>
  <context-param>
    <param-name>user</param-name>
    <param-value>admin</param-value>
  </context-param>
  <context-param>
    <param-name>password</param-name>
    <param-value>1234</param-value>
  </context-param>
  <filter>
    <filter-name>Authenticator</filter-name>
    <filter-class>pmj.j2ee.bookstore.filters.Authenticator</filter-class>
  </filter>
  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>pmj.j2ee.bookstore.controller.Controller</servlet-class>
  </servlet>
  <filter-mapping>
    <filter-name>Authenticator</filter-name>
    <servlet-name>Controller</servlet-name>
  </filter-mapping>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/Controller</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>Tester1</servlet-name>
  	<servlet-class>pmj.j2ee.bookstore.controller.Tester1</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Tester1</servlet-name>
  	<url-pattern>/Tester1</url-pattern>
  </servlet-mapping>
</web-app>
